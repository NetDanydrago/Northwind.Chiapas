                    <p class="text-yellow-200 text-sm sm:text-base md:text-lg">¬°Viva la vida y los productos!</p>
                </div>
                <button class="w-full sm:w-auto bg-yellow-400 hover:bg-yellow-500 text-purple-900 font-bold py-2 sm:py-3 px-4 sm:px-6 rounded-full shadow-lg transform hover:scale-105 transition-all duration-200 border-2 border-orange-600 text-sm sm:text-base" 
                        @onclick="OpenCreateModal">
                    üåº Nuevo producto
                </button>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="bg-white rounded-b-xl sm:rounded-b-2xl shadow-xl p-3 sm:p-6 md:p-8 border-2 sm:border-4 border-yellow-400 border-t-0">
            @if(ViewModel.Products == null)
            {
                <div class="flex items-center justify-center py-8 sm:py-12">
                    <div class="text-center">
                        <div class="text-4xl sm:text-5xl md:text-6xl mb-3 sm:mb-4 animate-bounce">üíÄ</div>
                        <p class="text-xl sm:text-2xl text-purple-600 font-bold">Cargando las ofrendas...</p>
                    </div>
                </div>
            }
            else if (ViewModel.Products.Count == 0)
            {
                <div class="text-center py-8 sm:py-12">
                    <div class="text-6xl sm:text-7xl md:text-8xl mb-3 sm:mb-4">üïØÔ∏è</div>
                    <p class="text-xl sm:text-2xl text-orange-600 font-bold">No hay productos en el altar</p>
                    <p class="text-gray-600 mt-2 text-sm sm:text-base">¬°Crea la primera ofrenda!</p>
                </div>
            }
            else
            {
                <!-- Vista de tabla en desktop -->
                <div class="hidden lg:block overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="bg-gradient-to-r from-purple-600 to-pink-600 text-white">
                                <th class="px-4 lg:px-6 py-3 lg:py-4 text-left text-base lg:text-lg font-bold border-r-2 border-yellow-400">üíÄ Id</th>
                                <th class="px-4 lg:px-6 py-3 lg:py-4 text-left text-base lg:text-lg font-bold border-r-2 border-yellow-400">üå∫ Nombre</th>
