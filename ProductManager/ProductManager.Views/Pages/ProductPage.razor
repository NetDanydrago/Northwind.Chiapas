                                <th class="px-4 lg:px-6 py-3 lg:py-4 text-left text-base lg:text-lg font-bold border-r-2 border-yellow-400">üè∑Ô∏è Categor√≠a</th>
                                <th class="px-4 lg:px-6 py-3 lg:py-4 text-right text-base lg:text-lg font-bold">‚ö° Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in ViewModel.Products)
                            {
                            <tr id="row-@product.Id" @key="product.Id" 
                                class="border-b-2 border-orange-200 hover:bg-gradient-to-r hover:from-orange-50 hover:to-pink-50 transition-all duration-200">
                                <td class="px-4 lg:px-6 py-3 lg:py-4 font-semibold text-purple-700">@product.Id</td>
                                <td class="px-4 lg:px-6 py-3 lg:py-4 font-bold text-orange-600 text-base lg:text-lg">@product.Name</td>
                                <td class="px-4 lg:px-6 py-3 lg:py-4 text-gray-700">@product.Description</td>
                                <td class="px-4 lg:px-6 py-3 lg:py-4 text-indigo-600 font-semibold">@product.CategoryName</td>
                                <td class="px-4 lg:px-6 py-3 lg:py-4 text-right">
                                    <div class="flex justify-end gap-2">
                                        @if (product.IsActive)
                                        {
                                            <button class="bg-gradient-to-r from-green-400 to-green-600 hover:from-green-500 hover:to-green-700 text-white font-bold py-2 px-3 lg:px-4 rounded-full shadow-md transform hover:scale-105 transition-all duration-200 text-sm lg:text-base" 
                                                    @onclick="() => OpenEditModal(product)">
                                                ‚úèÔ∏è Editar
                                            </button>
                                            <button class="bg-gradient-to-r from-red-400 to-red-600 hover:from-red-500 hover:to-red-700 text-white font-bold py-2 px-3 lg:px-4 rounded-full shadow-md transform hover:scale-105 transition-all duration-200 text-sm lg:text-base" 
                                                    @onclick="() => { PendingDesactivateId = product.Id; ShowDesactivateConfirm = true;}">
                                                üïØÔ∏è Desactivar
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="bg-gray-300 text-gray-600 font-bold py-2 px-3 lg:px-4 rounded-full text-sm lg:text-base">üí§ Desactivado</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Vista de tarjetas en m√≥vil y tablet -->
                <div class="lg:hidden space-y-3">
                    @foreach (var product in ViewModel.Products)
                    {
                        <div @key="product.Id" class="bg-gradient-to-r from-orange-50 to-pink-50 rounded-xl border-2 border-orange-300 p-4 shadow-md">
                            <div class="flex items-start justify-between mb-3">
                                <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-1">
                                        <span class="text-purple-600 font-bold text-sm">üíÄ ID: @product.Id</span>
                                    </div>
                                    <h3 class="text-orange-600 font-bold text-lg mb-2">üå∫ @product.Name</h3>
                                    <p class="text-gray-700 text-sm mb-2">üìø @product.Description</p>
                                    <p class="text-indigo-600 text-sm font-semibold">üè∑Ô∏è @product.CategoryName</p>
                                </div>
                            </div>
                            <div class="flex gap-2 mt-3">
                                @if (product.IsActive)
                                {
                                    <button class="flex-1 bg-gradient-to-r from-green-400 to-green-600 hover:from-green-500 hover:to-green-700 text-white font-bold py-2 px-3 rounded-full shadow-md transition-all duration-200 text-sm" 
                                            @onclick="() => OpenEditModal(product)">
                                        ‚úèÔ∏è Editar
                                    </button>
                                    <button class="flex-1 bg-gradient-to-r from-red-400 to-red-600 hover:from-red-500 hover:to-red-700 text-white font-bold py-2 px-3 rounded-full shadow-md transition-all duration-200 text-sm" 
                                            @onclick="() => { PendingDesactivateId = product.Id; ShowDesactivateConfirm = true;}">
                                        üïØÔ∏è Desactivar
                                    </button>
                                }
                                else
                                {
                                    <span class="flex-1 text-center bg-gray-300 text-gray-600 font-bold py-2 px-3 rounded-full text-sm">üí§ Desactivado</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal Crear Producto -->
@if (ShowCreateModal)
{
    <div class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-40 p-4">
        <div class="bg-white rounded-2xl sm:rounded-3xl shadow-2xl max-w-md w-full border-2 sm:border-4 border-yellow-400 transform transition-all max-h-[90vh] overflow-y-auto">
            <!-- Header del Modal -->
            <div class="bg-gradient-to-r from-orange-500 via-pink-500 to-purple-600 rounded-t-xl sm:rounded-t-2xl p-4 sm:p-6 border-b-2 sm:border-b-4 border-yellow-400 sticky top-0 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-white">üåº Nuevo Producto</h2>
                    <button @onclick="() => ShowCreateModal = false" 
                            class="text-white hover:text-yellow-300 text-2xl sm:text-3xl font-bold transition-colors">
                        √ó
                    </button>
                </div>
            </div>
            
            <!-- Body del Modal -->
            <div class="p-4 sm:p-6">
                <EditForm Model="ActionProductViewModel.Product" OnValidSubmit="CreateAsync">
                    <DataAnnotationsValidator />

                    <div class="mb-4">
                        <label class="block text-purple-700 font-bold mb-2 text-sm sm:text-base">üè∑Ô∏è Nombre</label>
                        <InputText @bind-Value="ActionProductViewModel.Product.Name" 
                                   class="w-full px-3 py-2 border-2 border-orange-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300 focus:border-pink-500 transition-all text-sm" />
                        <ValidationMessage For="() => ActionProductViewModel.Product.Name" class="text-red-600 text-xs mt-1 font-semibold" />
                    </div>

                    <div class="mb-4">
                        <label class="block text-purple-700 font-bold mb-2 text-sm sm:text-base">üìù Descripci√≥n</label>
                        <InputText @bind-Value="ActionProductViewModel.Product.Description" 
                                   class="w-full px-3 py-2 border-2 border-orange-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300 focus:border-pink-500 transition-all text-sm" />
                        <ValidationMessage For="() => ActionProductViewModel.Product.Description" class="text-red-600 text-xs mt-1 font-semibold" />
                    </div>

                    <div class="mb-6">
                        <label class="block text-purple-700 font-bold mb-2 text-sm sm:text-base">üè∑Ô∏è Categor√≠a</label>
                        <InputNumber @bind-Value="ActionProductViewModel.Product.CategoryId" 
                                     class="w-full px-3 py-2 border-2 border-orange-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-300 focus:border-pink-500 transition-all text-sm" />
                        <ValidationMessage For="() => ActionProductViewModel.Product.CategoryId" class="text-red-600 text-xs mt-1 font-semibold" />
                    </div>

                    <div class="flex gap-2 sm:gap-3 justify-end">
                        <button type="button" 
                                @onclick="() => ShowCreateModal = false" 
                                disabled="@IsLoading"
                                class="bg-gray-400 hover:bg-gray-500 text-white font-bold py-2 px-4 sm:px-6 rounded-full shadow-lg transition-all duration-200 disabled:opacity-50 text-sm">
                            Cancelar
                        </button>
                        <button type="submit" 
                                disabled="@IsLoading"
                                class="bg-gradient-to-r from-green-400 to-green-600 hover:from-green-500 hover:to-green-700 text-white font-bold py-2 px-4 sm:px-6 rounded-full shadow-lg transform hover:scale-105 transition-all duration-200 disabled:opacity-50 text-sm">
                            @(IsLoading ? "üí´ Guardando..." : "‚ú® Guardar")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

